<UserControl x:Class="App18.Material.Views.PageHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:App18.Material.ViewModels"
             xmlns:cv="clr-namespace:App18.Material.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:PageHomeViewModel, IsDesignTimeCreatable=True}"
             Background="{DynamicResource PrimaryHueLightBrush}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <cv:DateToHumanizeConverter x:Key="DateToHumanizeConverter" />
    </UserControl.Resources>
    <Grid>
        <ListView HorizontalAlignment="Left" VerticalAlignment="Top"
                  ItemsSource="{Binding EmailList}">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <Border Margin="0,12,0,0" CornerRadius="4">
                                    <Grid>
                                        <Border x:Name="PART_Back" Background="#FFF" Opacity="0.4" CornerRadius="4" />
                                        <Grid Width="280" Height="120" Margin="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Height="50" Orientation="Horizontal" Grid.Row="0">
                                                <Image Width="35" Height="35" Margin="5,5,0,5"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       Source="https://img-blog.csdnimg.cn/20190323161418695.png" />

                                                <StackPanel Opacity="0.9" Margin="8,5,0,5" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" />
                                                    <TextBlock
                                                        Text="{Binding Time, Converter={StaticResource DateToHumanizeConverter}}"
                                                        FontSize="10" Margin="0,2,0,0" />
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1">
                                                <TextBlock FontSize="15" Margin="5,0,5,5"
                                                           Text="{Binding Subject}" />

                                                <TextBlock VerticalAlignment="Top" Margin="5,0,0,0"
                                                           Text="{Binding Content}"
                                                           TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="PART_Back" Property="Background"
                                                Value="{DynamicResource PrimaryHueLightBrush}" />
                                        <Setter TargetName="PART_Back" Property="Opacity" Value="0.2" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="PART_Back" Property="Background"
                                                Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter TargetName="PART_Back" Property="Opacity" Value="0.8" />
                                        <Setter Property="TextElement.Foreground"
                                                Value="{DynamicResource PrimaryHueDarkForegroundBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Image Height="400" Width="400" Source="pack://application:,,,/Resources/girl-cleaning-dishes.png" />
    </Grid>
</UserControl>
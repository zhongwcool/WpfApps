<Window x:Class="App05.TaskAndCancel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:vm="clr-namespace:App05.TaskAndCancel.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="异步任务与取消" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="Info"/>
        <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Click="ButtonRenew_OnClick" Margin="5,0,5,5">Renew</Button>
            <Button Click="ButtonStop_OnClick" Margin="5,0,5,5">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
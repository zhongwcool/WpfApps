<Window x:Class="WpfApp8.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:control="clr-namespace:WpfApp8.Control"
        xmlns:vm="clr-namespace:WpfApp8.ViewModels;assembly=WpfApp8"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Popup x:Name="PopTest" PopupAnimation="Fade" PlacementTarget="{Binding ElementName=BtnTest}"
               StaysOpen="False" SnapsToDevicePixels="True" ClipToBounds="True" AllowsTransparency="True"
               Placement="Top" VerticalOffset="25">
            <Border BorderBrush="Gray" BorderThickness="1">
                <WrapPanel x:Name="PanelTest" Width="430">
                    <control:MetroButton Content="连接" Icon="../Image/ic_action_toys.png"
                                         Style="{StaticResource MetroButtonStyle}" Margin="3"
                                         Command="{Binding CommandConnect}" />
                    <control:MetroButton Content="网络" Icon="../Image/ic_action_toys.png"
                                         Style="{DynamicResource MetroButtonStyle}" Margin="3"
                                         Command="{Binding CommandNetwork}" />
                    <control:MetroButton Content="所有设置" Icon="../Image/ic_action_toys.png"
                                         Style="{DynamicResource MetroButtonStyle}" Margin="3"
                                         Command="{Binding CommandSettings}" />
                    <control:MetroButton Content="飞行模式" Icon="../Image/ic_action_toys.png"
                                         Style="{DynamicResource MetroButtonStyle}" Margin="3"
                                         Command="{Binding CommandAirplane}" />
                    <control:MetroButton Content="定位" Icon="../Image/ic_action_toys.png"
                                         Style="{DynamicResource MetroButtonStyle}" Margin="3"
                                         Command="{Binding CommandLocate}" />

                    <control:MetroCheckBox Content="专注助手" Icon="../Image/ic_action_toys.png"
                                           Style="{DynamicResource MetroCheckBoxStyle}" Margin="3"
                                           IsChecked="{Binding IsInFocus}" />
                    <control:MetroCheckBox Content="移动热点" Icon="../Image/ic_action_toys.png"
                                           Style="{DynamicResource MetroCheckBoxStyle}" Margin="3"
                                           IsChecked="{Binding IsHotpot}" />
                    <control:MetroCheckBox Content="夜间模式" Icon="../Image/ic_action_toys.png"
                                           Style="{DynamicResource MetroCheckBoxStyle}" Margin="3"
                                           IsChecked="{Binding IsNightMode}" />
                    <control:MetroCheckBox Content="未连接" Icon="../Image/ic_action_toys.png"
                                           Style="{DynamicResource MetroCheckBoxStyle}" Margin="3"
                                           IsChecked="{Binding IsBluetooth}" />
                    <control:MetroCheckBox Content="投影" Icon="../Image/ic_action_toys.png"
                                           Style="{DynamicResource MetroCheckBoxStyle}" Margin="3"
                                           IsChecked="{Binding IsProject}" />
                </WrapPanel>
            </Border>
        </Popup>

        <UniformGrid Columns="5" Height="200" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TxtConnect}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TxtNetwork}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TxtSettings}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TxtAirplane}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TxtLocate}" />
            </Border>

            <Border BorderThickness="1">
                <TextBlock Text="{Binding TextInFocus}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TextHotpot}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TextNightMode}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TextBluetooth}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding TextProject}" />
            </Border>
        </UniformGrid>
        
        <!-- 状态栏 -->
        <Grid x:Name="MyStatusBar" VerticalAlignment="Bottom" Margin="0,0,0,0" Background="DarkSlateBlue">
            <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Center" Height="35">
                <Button x:Name="BtnTest" Content="别点我" VerticalAlignment="Center" Height="35" />
            </WrapPanel>
        </Grid>

    </Grid>
</Window>
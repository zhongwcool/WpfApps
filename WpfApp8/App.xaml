<Application x:Class="WpfApp8.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="Style/Colors.xaml" />
                <ResourceDictionary Source="Image/Icons.xaml" />
                <ResourceDictionary Source="Control/MetroButton.xaml" />
                <ResourceDictionary Source="Control/MetroCheckBox.xaml" />
                <ResourceDictionary Source="Control/IconButton.xaml" />
                <ResourceDictionary Source="Control/IconCheckBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
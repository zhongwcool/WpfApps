<Window x:Class="App20.Focus.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer x:Name="ScrollViewer" VerticalScrollBarVisibility="Auto" Opacity="0.8">
            <TextBox x:Name="BlockConsole" />
        </ScrollViewer>
        <Canvas>
            <Rectangle x:Name="MyControl" Canvas.Right="100" Canvas.Top="280"
                       Width="80" Height="50" RadiusX="5" RadiusY="5" Fill="Gold"
                       MouseEnter="MyControl_MouseEnter" MouseLeave="MyControl_MouseLeave" />

            <Image Source="pack://application:,,,/Resource/ImgPeperPlane.png" Width="200" Height="100" Canvas.Top="310"
                   Canvas.Right="180" />
        </Canvas>
    </Grid>
</Window>